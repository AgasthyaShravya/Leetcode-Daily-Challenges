class Solution {
    public boolean isPowerOfTwo(int n) {
        int i=0;
        boolean t=true;
        while(t){
            if(Math.pow(2,i)==n){
                t=true;
                break;
            }
            else if(Math.pow(2,i)>n)
                t=false;
            i++;
        }
        return t;
    }
}

